<p style="color: green"><%= notice %></p>

<% if @user.profile %>
  <%= render "profile_edit" %>
<% else %>
  <%= render "/profiles/profile_new" %>
<% end %>

<div class="w-full border-2 border-grey-200 rounded max-w-2xl self-center mt-20 p-8 bg-white flex flex-col items-center">
  <h2 class="text-center text-bold mb-8 text-xl font-bold"> Edit Access </h2>

  <%= form_for(:user, as: resource_name, url: registration_path(resource_name), html: { method: :put }, class: 'w-full flex flex-col items-center') do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.email_field :email, autocomplete: "email", placeholder: 'Email', class: 'block w-3/4 mb-2 px-2 py-1 border-2 rounded hover:border-yellow-200 focus:outline-yellow-200 focus:bg-yellow-50' %>

    <%= f.password_field :password, autocomplete: "new-password", placeholder: 'New password (Leave blank if you don\'t want to change it)', class: 'block w-3/4 mb-2 px-2 py-1 border-2 rounded hover:border-yellow-200 focus:outline-yellow-200 focus:bg-yellow-50' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Password Confirmation', class: 'block w-3/4 mb-8 px-2 py-1 border-2 rounded hover:border-yellow-200 focus:outline-yellow-200 focus:bg-yellow-50' %>
    <%= f.password_field :current_password, autocomplete: "current-password", placeholder: 'Password (we need your current password to confirm your changes)', class: 'block w-3/4 mb-4 px-2 py-1 border-2 rounded hover:border-yellow-200 focus:outline-yellow-200 focus:bg-yellow-50' %>

    <div class="actions">
      <%= f.submit "Update", class: 'px-2 py-1 border-2 rounded-md bg-yellow-200 hover:bg-yellow-400 focus:bg-yellow-400 active:bg-yellow-100 border-yellow-400 hover:border-yellow-200 focus:border-yellow-200 cursor-pointer w-40' %>
    </div>
  <% end %>

  <div class="flex flex-row items-end self-end mt-6 mr-4 items-center">
    <span class="mr-2">Unhappy?</span>
    <%= button_to "delete account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: 'px-2 py-1 border-2 rounded-md bg-red-200 hover:bg-red-400 focus:bg-red-400 active:bg-red-100 border-red-400 hover:border-red-200 focus:border-red-200 cursor-pointer' %>
  </div>
</div>